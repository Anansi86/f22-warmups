//PSEUDOCODE
//1. add array a, get sum a
//2. add array b, get sum b
//3. add sum a and sum b to get total sum


function arrayPlusArray(arr1, arr2) {
  let sum1 = 0;
  for(let i = 0; i < arr1.length; i++){
  sum1 += arr1[i]
  }
  console.log(sum1)
  
  let sum2 = 0;
  for(let i = 0; i < arr2.length; i++){
  sum2 += arr2[i]
  }
  console.log(sum2)
  
  let totalSum = sum1 + sum2;
  return totalSum
  }
